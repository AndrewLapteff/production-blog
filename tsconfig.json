{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"]
    },
    "strict": true
  },
  "ts-node": {
    "include": ["./config/jest/setupTests.ts"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
